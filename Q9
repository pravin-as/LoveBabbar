package project;

import java.util.Scanner;

import java.util.Arrays;

public class Apple {

	public static void main(String[] args) {

		try {
			Scanner sc = new Scanner(System.in);

			int K = sc.nextInt();
			int N = sc.nextInt();
			int arr[] = new int[N];

			for (int i = 0; i < N; i++) {
				arr[i] = sc.nextInt();
			}

			Arrays.sort(arr);
			int a = arr[0];
			int b = arr[N - 1];
			System.out.println(b - a - 2 * K);

		} catch (

		Exception e) {
			return;
		}

	}
}
